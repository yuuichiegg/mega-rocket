        this.vessels = {};
        
        this.focus = CONSTANTS.VESSEL.BOOSTER;
        this.state = CONSTANTS.STATE.MENU;
        this.time = 0;
        this.countdown = 10;
        this.mechazilla = { armOpen: 1.0 };
        this.weather = { wind: 0, isDay: true };
